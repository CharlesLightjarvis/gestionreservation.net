@model GestionReservation.Data.Paiement

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Paiement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodePaiement" class="control-label"></label>
                <input asp-for="CodePaiement" class="form-control" />
                <span asp-validation-for="CodePaiement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdReservation" class="control-label"></label>
                <select asp-for="IdReservation" class ="form-control" asp-items="@(new SelectList(ViewBag.Reservations, "IdReservation", "CodeReservation"))">
                    <option value="">-- Choisir Reservation -- </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePaiement" class="control-label"></label>
                <input asp-for="DatePaiement" class="form-control" />
                <span asp-validation-for="DatePaiement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModeDePaiement" class="control-label"></label>
                <input asp-for="ModeDePaiement" class="form-control" />
                <span asp-validation-for="ModeDePaiement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
