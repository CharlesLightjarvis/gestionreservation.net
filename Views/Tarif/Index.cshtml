@model IEnumerable<GestionReservation.Data.Tarif>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste Tarifs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table shadow-lg">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Classe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolitiqueAnnulation)
            </th>
            <th>
                Numero_vol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Classe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrixBase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PolitiqueAnnulation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVolNavigation.NumeroVol)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTarif" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdTarif" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdTarif" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
