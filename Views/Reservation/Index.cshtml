@model IEnumerable<GestionReservation.Data.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste Reservations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table shadow-lg">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodeReservation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReservation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                Nom Prenom
            </th>
            <th>
                Compagnie
            </th>
            <th>
                Numero_vol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeReservation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateReservation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClientNavigation.Nom) @Html.DisplayFor(modelItem => item.IdClientNavigation.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCompagnieNavigation.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVolNavigation.NumeroVol)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdReservation" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdReservation" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdReservation" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
